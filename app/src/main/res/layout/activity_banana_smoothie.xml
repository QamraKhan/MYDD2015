<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.mydd2015.bananaSmoothieActivity">

    <TextView
        android:id="@+id/textViewBananaSmoothie1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipes for you:Banana, peanut butter smoothie"

        />


    <ImageView
        android:id="@+id/imageViewBananaSmoothie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bananasmoothie"
        android:layout_below="@id/textViewBananaSmoothie1"
        />
    <TextView
        android:id="@+id/textViewBananaSmoothie2"

        android:text="Recommended items from your cart:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageViewBananaSmoothie"
        />

    <ImageView
        android:id="@+id/imageViewBananaSmoothie2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/greekyoghurt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewBananaSmoothie2"
        />

    <ImageView
        android:id="@+id/imageViewBananaSmoothie3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/greekyoghurt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewBananaSmoothie2"
        android:layout_toRightOf="@id/imageViewBananaSmoothie2"
        />

    <Button
        android:id="@+id/buttonBananaSmoothie"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/greekyoghurt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageViewBananaSmoothie3"

        />
</RelativeLayout>
