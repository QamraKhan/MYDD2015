<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.mydd2015.foodTableActivity">


    <Button
        android:id="@+id/buttonExpiring"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is expiring..."
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:background="#D50000"
        android:textColor="#FFFFFF"
        />


    <ImageButton
        android:id="@+id/imageButtonRaspberry"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/raspberries"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonExpiring"
        />

    <ImageButton    android:id="@+id/imageButtonBanana"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/bananas"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/imageButtonRaspberry"
        android:layout_below="@id/buttonExpiring"
        />

    <ImageButton
        android:id="@+id/imageButtonOrange"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/oranges"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/imageButtonRaspberry"
        android:layout_below="@id/buttonExpiring"
        />


</RelativeLayout>
