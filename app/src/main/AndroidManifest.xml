<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mydd2015" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/avocado72px"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".foodTableActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mydd2015.MainActivity" />
        </activity>
        <activity
            android:name=".expiringFoodActivity"
            android:label="@string/title_activity_expiring_food"
            android:parentActivityName=".foodTableActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mydd2015.foodTableActivity" />
        </activity>
        <activity
            android:name=".bananaDetailActivity"
            android:label="@string/title_activity_banana_detail"
            android:parentActivityName=".foodTableActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mydd2015.foodTableActivity" />
        </activity>
    </application>

</manifest>
